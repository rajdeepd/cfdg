.header
  .header-a
    .wrapper
      .bg-logo.flt-left
        %a{:href => "#{root_url}"}
          %img{:src => "/assets/logo.png"}
      %ul.ul-a.flt-right
        - if !admin_user.blank?
          %li
            %a.label-2{:href => "#{log_out_path}"} Logout
  .header-b
    .wrapper
      %ul.ul-b.flt-left
        %li{:class => "#{active_class("index","home")}"}
          %a{:href => "#{root_path}"}= t('menu.home')
        %li{:class => "#{active_class("directory","home")}"}
          %a{:href => "#{directory_path}"}= t('menu.directory')
        -#%li{:class => "#{active_class("wiki","home")}"}
          %a{:href => "#{wiki_path}"}= t('menu.wiki')
        -#%li{:class => "#{active_class("admin","admin")}"}
          %a{:href => "#{new_admin_session_path}"}= t('menu.admin')
        %li{:class => "#{active_class("about","home")}"}
          %a{:href => "#{about_path}"}= t('menu.about')