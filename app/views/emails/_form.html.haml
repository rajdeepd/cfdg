.formDiv
  = form_tag(emails_path, :method => "POST", :remote => true) do
    #Form_ch
      .drop_list
        .one_side
          %div
            = text_field_tag :to,nil,:placeholder => "To",:class => "emailField"
          %br
          %div
            = text_field_tag :subject,nil, :placeholder => "Subject",:class => "emailField"
          %br
          %div
            = text_area_tag :body,nil, :placeholder => "Body",:class => "emailArea"
      .proposal
        = submit_tag "Send Email", :class => 'send',:style=> "margin-left:0px;margin-right:0px;"
