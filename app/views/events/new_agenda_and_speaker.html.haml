.content
  .loginContent.signUpWrapper
    .row
      .span10.offset1
        .loginLayout.clearfix
          .plainBlueHeader
            %h3 Congratulation!
          .agendaHeader
            %p
              Your Event is created,
              %br Now add agenda & speakers to event.
          .borderWithShadow
          .formBox
            -#%form.form-horizontal
            .control-group
              .controls
                %h5 Enter Event Agenda
            .agendaDiv
              -#.agendaBox.clearfix
              -#  %p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam est dui, laoreet et malesuada sit amet, ultricies eu nisi. Sed condimentum malesuada ante.
              -#  .editDeleteBtn
              -#    %a.editIcon{:href => '#'}
              -#    %a.deleteThikIcon{:href => '#'}
              - if @existing_agenda.present?
                -@existing_agenda.each do |agenda|
                  = render "append_agenda",:description => agenda.description,:agenda_id => agenda.id
            .control-group
              .controls
                %button.bigButton.blueBtn
                  %i.plusIcon
                  %span Add Session to Agenda
            = form_for(@agenda ,:url => create_agenda_event_path(@agenda.event),:method => "POST",:remote => true) do |f|
              .agendaAddDiv
                .control-group
                  %label.control-label
                    Event Session Detail
                  .controls
                    -#%textarea
                    = f.text_area :description
                .control-group
                  .controls
                    -#%button.blueBtn Done
              = f.submit "Done", :class=>"blueBtn"
          .formBox
            %form.form-horizontal
              .control-group
                .controls
                  %h5 Add Speaker Details
              %h4 Is Speaker already a CFDG member?
              .control-group
                %label.control-label
                  Speaker Name
                .controls
                  .addBox
                    %input{:type => "text"}
                    %button.blueBtn Add
              .speakersList
                %ul
                  %li
                    %img{:src => "/assets/human_face_1.jpg"}
                    .speakerDetails
                      .speakerName Gary Russell
                      .speakerFrom Banglore, India
                    %button.closeTileIcon
                  %li
                    %img{:src => "/assets/human_face_1.jpg"}
                    .speakerDetails
                      .speakerName Gary Russell
                      .speakerFrom Banglore, India
                    %button.closeTileIcon
                  %li
                    %img{:src => "/assets/human_face_1.jpg"}
                    .speakerDetails
                      .speakerName Gary Russell
                      .speakerFrom Banglore, India
                    %button.closeTileIcon
          .formBox
            %form.form-horizontal
              .control-group
                .controls
                  %button.bigButton.blueBtn.notAMember
                    %span If Speaker is not a CFDG member
              .nonMember
                .control-group
                  %label.control-label
                    Speaker Name
                  .controls
                    %input{:type => "text"}
                .control-group
                  %label.control-label
                    Upload Speakerâ€™s Image
                  .controls
                    .fileUpload.clearfix
                      %input.textbox{:readonly => "readonly", :type => "text"}/
                      .wrapper
                        %input.inputBrowse{:type => "button", :value => "Browse"}/
                        %input.inputHidden{:type => "file"} Browse
                    %span.imgType Your image must be JPG,GIF or PNG fromat
                .control-group
                  %label.control-label
                    Description about Speaker
                  .controls
                    %textarea
                .control-group
                  %label.control-label
                    Add Twitter Handle
                  .controls
                    %input{:type => "text"}
                .control-group
                  %label.control-label
                    Add Linked profile link
                  .controls
                    %input{:type => "text"}
                .control-group
                  .controls
                    %button.blueBtn Add Speaker
          .formBox.borderNone
            .form-horizontal
              .control-group
                .controls
                  %button.btn Skip & Add later
                  %button.orangeBtn Create Event

