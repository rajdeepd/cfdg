= javascript_include_tag "jquery.validate"
= semantic_form_for @event ,:url => chapter_events_path(params[:chapter_id]),:method => :post,:remote=> true do |f|
  .event-form
    .event-left{:style => "width:100%;"}
      .el-cont{:style => "margin-bottom: 16px;"}
        %h2.label-45.flt-left 
          = t("event_form.form_title", :chapter_name => @event.chapter.try(:name))
      .el-cont
        %h5.label-26.flt-left
          = t("event_form.event_basics")
      .el-cont.createEventField
        = f.input :title , :input_html => {:class => "input-b size-text-event-create"}, :placeholder => Event.human_attribute_name(:title), :label => false
      -#.error{:class => "el-cont"}
        %li{:style => "float:left;", :class => "inline-errors event_title"} &nbsp;
      .el-cont.createEventField
        = f.text_field :start_time, :class => "input-b size-text-event-create", :placeholder => Event.human_attribute_name(:start_time), :label => false
        .error{:class => "el-cont", :style => "clear:both"}
          %li{:style => "padding-left:74px;float:left;width:35%;", :class => "inline-errors event_event_start_date"}
          %li{:style => "float:left;padding-left:74px;", :class => "inline-errors event_event_start_time"}
      .el-cont.createEventField
        = f.text_field :end_time, :class => "input-b size-text-event-create", :placeholder => Event.human_attribute_name(:end_time), :label => false
        .error{:class => "el-cont", :style => "clear:both"}
          %li{:style => "padding-left:74px;width:35%;", :class => "inline-errors event_event_end_date"}
          %li{:style => "padding-left:74px;", :class => "inline-errors event_event_end_time"}
    .event-bottom
  .event-form
    .event-right
      .el-cont
        %h5.label-26.flt-left
          = t("event_form.event_location")
      .el-cont{:style => "margin-bottom:2px;"}
        = @chapter.location
      .el-cont
        = f.input :address_line1 , :input_html => {:class => "input-b size-text-event-create"} , :placeholder => Event.human_attribute_name(:address_line1), :label => false
      .el-cont
        = f.input :address_line2 , :input_html => {:class => "input-b size-text-event-create"} , :placeholder => Event.human_attribute_name(:address_line2), :label => false
      .el-cont
        = f.hidden_field :chapter_id
      .el-cont
        = f.input :postal_code , :input_html => {:class => "input-b size-text-event-create"} , :placeholder => Event.human_attribute_name(:postal_code), :label => false
      .el-cont
        = f.text_field :attendees_count , :class => "input-b size-text-event-create", :placeholder => Event.human_attribute_name(:attendees_count), :label => false

  .event-form{:style => "padding-top:10px; padding-bottom: 20px;"}
    .el-cont
      = f.text_area :description , :class => "input-b size-f" , :placeholder => Event.human_attribute_name(:description), :style => "height: 40px;margin:5px 0px;", :label => false

    .el-cont
      = f.text_area :resources_request, :class => "input-b size-f" , :placeholder => Event.human_attribute_name(:resources_request), :style => "height: 40px;margin:5px 0px;", :label => false
    #spinner.spinner{:style => 'display:none;margin-right:10px;float:right;'}
      %img{:src => "/assets/spinner.gif", :alt => "Loading" , :id => 'img-spinner'}/
    #options{:style => "width:628px; overflow: hidden;"}
      %button.btn-a-small.flt-right{:style => "margin-right:10px;", :id=>"event_form_submit"} #{t("button.create")}
      /%button.btn-c-small.flt-right{:style => "margin-right:10px;"} DISCARD


