= semantic_form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  = f.input :title , :placeholder => 'Event Name' , :label =>false          
  = f.input :event_start_date , :placeholder => 'Event Start Date' , :label =>false  
  = f.input :event_end_date , :placeholder => 'Event End Date' , :label =>false  
  = f.radio_button :status , 'live', :checked =>true 
  = f.label :live ,"Live"
  = f.radio_button :status , 'draft', :checked => false 
  = f.label :draft ,"Draft"
  = f.input :description , :placeholder => 'Description' , :label =>false  
  = f.input :venue , :placeholder => 'Venue' , :label =>false  
  = f.input :entry_fee , :placeholder => 'Entry Fee' , :label =>false  
  = f.hidden_field :chapter_id
  .actions
    = f.submit 'Save'