= javascript_include_tag "jquery.colorbox-min"
= stylesheet_link_tag    "colorbox", :media => "all"
.picHolder{:id => "image_gallery",:style =>"width:500px;" }
  -if @event.image_galleries.any?
    - @event.image_galleries.limit(5).each do |i|
      .eventImageHolder
        = link_to(image_tag(i.image),"#{i.image}")
    .seeAllImages
      = link_to "See all images for this event.",show_all_event_images_event_path(@event.image_galleries.first.event_id)

  -else
    = "No Image for the event."

.clr

:javascript
  $(document).ready(function(){
    $(".eventImageHolder a").colorbox({rel:'group1'});
  });