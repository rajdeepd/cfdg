#events
  .marg-top
    %h1.label-44 Upcoming Events
  %ul.ul-g{:style => "margin-top:-20px;"}
    - @upcoming_events.each do |event|
      %li
        .div-c
          %h1.label-23 30
          %h4.label-24 Sep
        .div-h
          %a.label-9{:href => "#"} #{event.title}  
          -if @profile_page != true  and !event.am_i_member?(@current_user.id)                    
            %button.btn-a-small.flt-right{:id=>"follow_an_event", :event_id => "#{event.id}"} FOLLOW
          %label.label-25
            -if(!event.event_start_date.blank?)
              #{Time.parse(event.event_start_date.to_s).strftime('%A %I:%M %p,%b %d, %Y')} I #{event.entry_fee}  per person
            Location: #{event.venue}
          %p.label-26
            #{event.description}
