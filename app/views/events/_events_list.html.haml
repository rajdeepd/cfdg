  %ul.ul-g{:style => "margin-top:-20px;"}
  - @past_events.each do |event|
    %li
      .div-c
        %h1.label-23 30
        %h4.label-24 Sep
      .div-h
        %a.label-9{:href => "#"} #{event.title}
        -if @profile_page != true and !event.am_i_member?(@current_user.id)
          %button.btn-a-small.flt-right{:style => "margin-left: 10px;", :id=>"follow_an_event", :event_id => "#{event.id}"} FOLLOW
        %a.flt-right{:href => "default.asp", :style => "padding-left:10px"}
          %span
            %img{:src => "/assets/camera.png"}/
        %a.flt-right{:href => "default.asp", :style => "padding-left:10px"}
          %span
            %img{:src => "/assets/youtube.png"}/
        %label.label-25 Attendees: #{event.event_members.size}
        %p.label-26
          #{event.description}
