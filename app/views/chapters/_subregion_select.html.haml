#chapter_state_name_wrapper
  - parent_region ||= params[:parent_region]
  - country = Carmen::Country.coded(parent_region)
  - if country.nil?
    = text_field :chapter, :state_name , :placeholder => 'State',  :label => false , :class => "textboxes"
  - elsif country.subregions?
    = subregion_select(:chapter , :state_name, parent_region)
  - else
    = text_field :chapter, :state_name , :placeholder => 'State',  :label => false , :class => "textboxes"