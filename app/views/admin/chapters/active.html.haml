- if @chapters.present?
  %table.table-e.customTable
    %thead
      %tr
        %td{:style => "width:84px;text-align: left;"}
          %h5.label-46 Chapter Name
        %td{:style => "width:84px;"}
          %h5.label-46 No. Members
        %td{:style => "width:84px;"}
          %h5.label-46 No. Events
        %td{:style => "width:84px;"}
          %h5.customTD.label-46 No. Members
          %h5.customTD.label-47 (Last 1 Year)
        %td{:style => "width:84px;"}
          %h5.customTD.label-46 No. Events
          %h5.customTD.label-47 (Last 1 Year)
        %td{:style => "width:250px;"}
          %h5.label-46
            Action
    %tbody
      - @chapters.each do |chapter|
        %tr
          %td{:style => "text-align: left;"}
            %h5.label-48= chapter.name
          %td
            %h5.label-48= chapter.try(:chapter_members).try(:count)
          %td
            %h5.label-48= chapter.try(:events).try(:count)
          %td
            %h5.label-48= chapter.try(:chapter_members).where("created_at >= ?", Date.today.years_ago(1)).try(:count)
          %td
            %h5.label-48= chapter.try(:events).where("created_at >= ?", Date.today.years_ago(1)).try(:count)
          %td
            %h5.label-48
              %a.change_status.btnLink{"data-url" => "#{change_status_admin_chapter_path(chapter, :status => 'active_to_incubate')}"} Incubate
              -#= link_to "Incubate",change_status_admin_chapter_path(chapter, :status => 'active_to_incubate'),:class => "btnLink change_status",:remote => true
              -#%button.btn-a-small.change_status{"data-url" => "#{add_secondary_coordinator_admin_chapter_path(chapter)}"} Add Secondary Co-ordinator
              =link_to "Add Coordinator",add_secondary_coordinator_admin_chapter_path(chapter),:class => "btnLink change_status" ,:method => "get"
              =link_to "Event Actions",admin_chapter_events_path(chapter),:class => "btnLink change_status" ,:method => "get"
              =link_to "Create Event",new_admin_chapter_event_path(chapter),:class => "btnLink change_status" ,:method => "get"
              =link_to "Post actions",admin_chapter_posts_path(chapter),:class => "btnLink change_status" ,:method => "get"
              =link_to "Remove Coordinator",remove_secondary_coordinator_admin_chapter_path(chapter),:class => "btnLink change_status" ,:method => "get"
      %tr
- else
  No Active Chapters