%table.table-b
  - @announcements.each do |ann|
    %tr
      %td.tb-1-4
        %img.img-c.flt-left{:src => "/assets/img-g.png"}
      %td.tb-2-4
        %a.label-36.bold{:href => "#"}= ann.title
        %p.label-26{:style => "padding-top:5px"}
          = ann.body
      %td.tb-3-4
        %h5.label-20.flt-right.date-cross= ann.created_at.strftime("%B %d, %Y")
      %td.tb-4-4
        %a.bg-cross-b.date-cross{:href => "#"}
%div{:style => "border-bottom: 1px solid #C5C6C7;margin: 30px 0 10px;"}
= will_paginate(@announcements, :class => 'pgt-bar',:inner_window => 2, :outer_window => 0, :renderer => RemoteLinkRenderer, :previous_label => '&lt; PREVIOUS'.html_safe, :next_label => 'NEXT &gt;'.html_safe)