-#.wrapper.content
  %h2 Change your password
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    %p
      = f.label :password, "New password"
      %br/
      = f.password_field :password
    %p
      = f.label :password_confirmation, "Confirm new password"
      %br/
      = f.password_field :password_confirmation
    %p= f.submit "Change my password"
  -#= render :partial => "devise/shared/links"



.loginContent.forgotPasswordWrapper
  .row
    .span10.offset1
      .loginLayout.clearfix
        .plainBlueHeader
          %h3 Reset Password
        .loginLeftPanel.loginVisual
          %ul
            %li
              Create & Attend the
              %span.upperCaseBold events
              in your city.
            %li
              Share your
              %span.upperCaseBold knowledge
            %li
              Discuss your
              %span.upperCaseBold thoughts
            %li
              Explore the
              %span.upperCaseBold devlopers world
        .loginRightPanel
          .loginText Enter New Password
          = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
            = devise_error_messages!
            = f.password_field :password , :placeholder => "New Password"
            = f.password_field :password_confirmation ,:placeholder => "Confirm New Password"
            = hidden_field_tag :reset_password_token , params[:reset_password_token]

            %button.orangeBtn{:href => "#"} Reset Password