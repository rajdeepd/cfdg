.loginContent.forgotPasswordWrapper
  .row
    .span10.offset1
      .loginLayout.clearfix
        .plainBlueHeader
          %h3 Forgot Password
        .loginLeftPanel.loginVisual
          %ul
            %li
              Create & Attend the
              %span.upperCaseBold events
              in you city.
            %li
              Share your
              %span.upperCaseBold knowledge
            %li
              Discuss your
              %span.upperCaseBold thoughts
            %li
              Explore the
              %span.upperCaseBold devlopers world
        .loginRightPanel
          .loginText
            Enter Your Email
          =form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
            = devise_error_messages!
            = f.email_field :email , :placeholder => "Email*"
            = f.submit "Continue" ,:class => "orangeBtn"



