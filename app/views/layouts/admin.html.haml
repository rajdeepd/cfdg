%html
  %head
    %link{:href => "/assets/favicon.ico",:rel => "shortcut icon"}
    %title Cloud Foundry Developer Group
    = stylesheet_link_tag    "admin", :media => "all"
    = stylesheet_link_tag    "site-admin", :media => "all"
    = stylesheet_link_tag    "site-admin-Announcement", :media => "all"
    %script{:src => "http://commons.qiniudn.com/jquery-1.8.3.min.js"}
    %script{:src => "http://commons.qiniudn.com/jquery-ui-1.9.2.custom.min.js"}
    = javascript_include_tag "admin"
