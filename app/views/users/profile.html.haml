.content.wrapper
  .content-c
    .cc-top
      = avatar_display_pic(@user,'thumb', '100x100','profile.png',"profile-img img-a flt-left")
      %h2.label-34 
        = "#{t('profile.welcome')} #{@user.name}"
      %h5.label-20 
        = "#{t('profile.location')} #{@user.city.try(:detail)}"
      - if current_user and (current_user.email.nil? or !current_user.is_confirmed?)
        %div.notice
          = t('profile.account_not_confirmed')
      %a.label-35{:href => "#{settings_path}"} 
        = t('profile.my_account')

    .cc-left   
      %ul.ul-i.profile_content
        - @user_chapters.each do |chaptermember|
          %li
            %a{:href => "#{userevents_events_url(chaptermember.chapter.id)}", :id=>"#{chaptermember.chapter.id}", :class=>"chapter_link", :style=>"font-size:16px"} #{chaptermember.chapter.name}
                     
      #event_content{:style => "min-height: 10px;"}

:javascript 
  Chapters.init();
  Chapters.firstChapterClick();
  Events.init();
  Posts.init();
-if (@create_event_from_chapters.present?)
  :javascript
    Chapters.fireclicks(#{@chapter_id});
