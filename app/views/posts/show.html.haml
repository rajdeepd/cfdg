.content.postDetails
  .blueHeader
    .chapterName.clearfix
      %h1 #{@post.title}
    .chapterDateAndPlace.clearfix
      %span.chapterDate #{@post.created_at.strftime("%B %d,%Y")}
  .chapterLayout
    -#%img.articleImg{:src => "/assets/article_img.jpg"}
    .articleLayout
      .clearfix
        .sliderHeadingMid
          %h3 Description
        .articleDescription
          %p #{@post.description}
          -#%a{:href => "#"} More...

      .comments.clearfix
        .sliderHeadingMid
          %h3 Comments
          %br
        .articleDescription#all_post_comments
          %ul.posts
            - if @comments.blank?
              %p
                No comments
            - else
              -@comments.each do |comment|
                %li
                  .clearfix
                    = avatar_display_pic(comment.user,'thumb', '50x50','profile.png',"img-c flt-left")
                    .commentText
                      %h5 #{comment.user.fullname}
                      %span.commentDate #{comment.created_at.strftime("%B %d,%Y")} at #{comment.created_at.strftime("%I:%M %p")}
                      %p
                        #{comment.content}
                        -#%a{:href => "#"} View more

      .comments
        .addCommentBox
          -if @current_user.present?
            = form_tag(add_comment_post_path,:method => "POST",:class => "add_comment",:remote => true) do
              = text_area_tag "comment[content]","", :placeholder => "comment", :label => false, :class => " content_comment_class ta-a"
              = hidden_field_tag "comment[commentable_type]","Post"
              = hidden_field_tag "comment[commentable_id]",@post.id
              = button_tag "Add Comment",:class => "addBtn btn add_comment_button btn-a-small flt-right"